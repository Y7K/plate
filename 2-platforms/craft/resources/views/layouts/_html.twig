<!--[if IE]><html lang="{{ craft.locale|slice(0,2) }}" class="ie old-ie"><![endif]-->
<!--[if !IE]><!--><html class="no-js" lang="{{ craft.locale|slice(0,2) }}"><!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="user-scalable=yes, initial-scale=1, width=device-width, height=device-height" />
    <meta httpEquiv="X-UA-Compatible" content="IE=edge" />

    {% if craft.config.googleVerificationCode %}
        <meta name="google-site-verification" content="{{ craft.config.googleVerificationCode }}" />
    {% endif %}

    {# Prevent Search Engines from indexing the Staging Site #}
    {% if craft.config.appEnv != 'production' %}
        <meta name="robots" content="noindex,nofollow">
    {% endif %}

    {# Loading Optimization #}
    {#<link rel="dns-prefetch" href="//cloudflare.com">#}

    {% block prefetch_resources %}{% endblock %}

    {#
     # SEO:
     # Overwrite this Block on Suppages to add page-specific SEO data with the "seo-data.twig" helper
     #}
    <title>{% if title is defined %}{{ title }} - {% endif %}{{ siteName }}</title> {# <------ Delete Title if using SEO Plugin #}
    {% block seo_data %}
        {# {% include 'helpers/seo-data' %} #}  {# <------ Uncomment this to enable SproutSEO (enable plugin first) #}
    {% endblock %}


    {# Favicons #}
    <link rel="apple-touch-icon" sizes="180x180" href="/build/images/meta/apple-touch-icon.png">
    <link rel="icon" type="image/png" href="/build/images/meta/favicon-32x32.png" sizes="32x32">
    <link rel="icon" type="image/png" href="/build/images/meta/favicon-16x16.png" sizes="16x16">
    <link rel="manifest" href="/build/images/meta/manifest.json">
    <link rel="mask-icon" href="/build/images/meta/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="theme-color" content="#ffffff">


    {# CSS #}
    {# All header stuff added by plugins #}
    {{ getHeadHtml() }}

    {# Block to insert custom, component-specific vendor css files #}
    {% block include_vendor_css %}{% endblock %}

    {# Load Craft Bust Macro #}
    {% import "helpers/craft-bust.twig" as bust %}

    {# Vendor CSS from 3rd party plugins #}
    {#<link rel="stylesheet" type="text/css" href="{{ bust.er('/build/css/vendor.css') }}">#}

    {# Main CSS #}
    <link rel="stylesheet" type="text/css" href="{{ bust.er('/build/css/main.css') }}">

    {# Custom Modernizr checks. Please create custom modernizr build at "https://modernizr.com/download!" #}
    {# <script type="text/javascript" src="/build/js/vendor/modernizr/modernizr.custom.min.js"></script> #}

    {# Y7K Analytics #}
    {% include "helpers/piwik-analytics.twig" %}

</head>

{# Use "page_type" to distinguish each page for JS actions and styling. Use "body_class" for additional classes #}
<body class="{{ block('body_class') }}">

    {# Main Content #}
    {% block page %}{% endblock %}

    {# Block right before end of body. e.g. to add modal windows and other overlays #}
    {% block before_body_ends %}{% endblock %}

    {# Vendor JS libraries #}
    {# <script type="text/javascript" src="{{ craft.bust.er('/build/js/vendor.js') }}"></script> #}

    {# All footer stuff added by plugins #}
    {{ getFootHtml() }}

    {# Block to insert custom, component-specific vendor js files #}
    {% block include_vendor_js %}{% endblock %}

    {% include 'helpers/frontend-constants.twig' %}

    {# Main JS #}
    <script type="text/javascript" src="{{ bust.er('/build/js/app.js') }}"></script>

    {# Block to insert custom, component-specific js block after all other code #}
    {% block include_component_js %}{% endblock %}


    {% include 'helpers/google-analytics' %}

</body>
</html>
