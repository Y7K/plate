{#
 # Menu Item Active
 # ---------------
 #
 # Highlights the current active menu item if either the first part of the current uri ( THIS/route/page/xy )
 # or the last Part of the current uri ( /route/page/THIS ) is equal to a given string (from a navigation item)
 #
 #
 #}

 {% macro isItemActive(segmentType, urlPart) %}

    {% if segmentType == 'first' %}
        {% set requestSegment = craft.request.firstSegment %}
    {% elseif segmentType == 'last' %}
          {% set requestSegment = craft.request.lastSegment %}
    {% endif %}

    {% if requestSegment in urlPart %}
        {% return 'navigation__item--active' %}
    {% endif %}
{% endmacro %}
